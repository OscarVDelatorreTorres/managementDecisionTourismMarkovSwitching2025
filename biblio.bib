	urldate = {2025-04-20},
	date = {2001},
	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1468-0262.00256},
	keywords = {{GLS} detrending, information criteria, Integrated processes, truncation lag},
	file = {Snapshot:/Users/oscardelatorretorres/Zotero/storage/7STM48DR/1468-0262.html:text/html},
