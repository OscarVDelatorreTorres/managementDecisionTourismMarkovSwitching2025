	keywords = {financial performance, {CSR}, ★, distinctive of {CSR}, strategy},
	file = {PDF:/Users/oscardelatorretorres/Zotero/storage/CEA63CIC/m-api-6f9fd24f-98fe-d7db-3db7-69d1b10cb253.pdf:application/pdf},
